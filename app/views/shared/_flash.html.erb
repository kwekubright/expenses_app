<%# the if statement makes the alerts disappear from the about page since we don't need them. %>
<% if flash[:notice] %>
<div class = "alert alert-info mt-2" role= "alert">
<%= flash[:notice] %>
</div>
<% end %>
<% if flash[:alert] %>
<div class = "alert alert-warning mt-2" role="alert">
<%= flash[:alert] %>
</div>
<% end %>
